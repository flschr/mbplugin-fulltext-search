{{- $list := .Site.RegularPages -}}
{
	"version": "https://jsonfeed.org/version/1",
	"title": {{ .Site.Title | jsonify }},
	"icon": "{{ .Site.Author.avatar }}",
	"home_page_url": "{{ .Site.BaseURL }}",
	"feed_url": "{{ .Site.BaseURL }}archive/index-titles.json",
	"cache_version": "{{ .Site.LastChange.Unix }}",
	"items": [
		{{- $len := (len $list) -}}
		{{ range $index, $value := $list }}
			{{- $tags := default (slice) .Params.tags -}}
			{{- $categories := default (slice) .Params.categories -}}
			{
				"id": "{{ .Permalink }}",
				"title": {{ .Title | jsonify }},
				"date_published": "{{ .Date.Format "2006-01-02T15:04:05-07:00" }}",
				"url": "{{ .Permalink }}",
				"type": "{{ .Type }}",
				"tags": {{ $tags | jsonify }},
				"categories": {{ $categories | jsonify }}
			}
			{{- if ne (add $index 1) $len -}},{{- end -}}
		{{ end }}
	]
}
